<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:layout_marginBottom="@dimen/material_baseline_grid_0.5x"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:paddingTop="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/article_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/article_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/material_baseline_grid_1x"
                    android:layout_marginTop="@dimen/material_baseline_grid_1x"
                    tools:text="Space.com" />

            </RelativeLayout>


            <TextView
                android:id="@+id/article_title"
                style="@style/MaterialTypography.Regular.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/titleBarColor"
                android:paddingStart="@dimen/material_baseline_grid_1.5x"
                android:paddingEnd="@dimen/material_baseline_grid_1.5x"
                android:paddingTop="@dimen/material_baseline_grid_1.5x"
                android:textColor="@color/white"
                android:maxLines="2"
                tools:text="Article Title Here" />
            <TextView
                android:id="@+id/article_publication_date"
                style="@style/MaterialTypography.Locale.Subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/titleBarColor"
                android:paddingStart="@dimen/material_baseline_grid_1.5x"
                android:paddingEnd="@dimen/material_baseline_grid_1.5x"
                android:paddingBottom="@dimen/material_baseline_grid_1.5x"
                android:textColor="@color/white"
                tools:text="Mon, 02 Apr 2018 23:13:07 GMT" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>